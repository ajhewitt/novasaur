# Calculate ECC & CRC8s on page - one byte per 2-cycle, fetch when done
INCLUDE ../inc/unary.nsa
INCLUDE ../inc/zpage.nsa
INCLUDE ../inc/pages.nsa
PAGE DSKCHK_PG

#BREG: CRC8 low record, init 0
#CREG: CRC8 high record, init 0
#DREG: RAM page
#EREG: RAM X index, init 0
#HREG: ECC code 0, init 0
#LREG: ECC code 1, init 0
# assume: Y = $VMS
LDZ HL, $INC2$NULL
FNH DZ, HLD                # VMS+2
LD HL, $IDEN$IDEN
LD Y, $EREG
FNFH DZ, XA                # X = Ereg
#11
LD Y, $DREG
FNH A, Y                   # Y = Dreg
FNFL M, HL                 # data = [Y,X]
LD Y, $HREG
#20
XORHL DZ, ND               # Hreg = data^Hreg
LD Y, $LREG
XORHL DZ, NA               # A = data^Lreg
#30
LD HL, $LFSR$IDEN
FNCH AZ, ND                # LFSR(A) -> Lreg
LD Y, $DREG
FNFL DZ, Y
#40
FNFL M, HL                 # HL = data
LD Y, $CREG
XORHL DZ, NA               # Creg = data^Creg
#49
LD HL, $CRC8$IDEN
FNCH AZ, ND                # Creg = CRC8(A)
LD HL, $INC$NULL
LDZ Y, $BREG
NOP
NOP
#60
NOP
NOP
NOP
NOP
NOP
NOP
NOP
NOP
NOP
NOP
#70
NOPZ
FNH DZ, HLD                # Ereg++
LDZ HL, $ZERO$NULL
FNH DZ, HLA                # Ereg==0?
LDP HL, $FETCH             # yes: done
LDN HL, $DSKCHK_INST       # no: continue
#80
LD Y, $VMS                 # set Y = $VMS on exit
DISHL DZ, PGA              # jump to next VMC
#86
