# clear screen
INCLUDE ../inc/unary.nsa
INCLUDE ../inc/zpage.nsa
INCLUDE ../inc/pages.nsa
PAGE CLR_SCRN

LD HL, $0
LD Y, $CLR_Y
MULH AZ, ND             # Y=0

$NEXTY
LD HL, $0x0C
LD Y, $CLR_X
MVHL AZ, ND             # X=12
$NEXTX
LD HL, $INC2$IDEN
LD Y, $CLR_X
FNFH DZ, XD             # set X+2
LD Y, $CLR_Y
FNFL DZ, Y              # set Y
LD HL, $0xA0            # *** fill with black bg, green fg, font 2
MVHL A, ND              # 0x20 ->[X,Y]
LD HL, $IDEN$DEC
LD Y, $CLR_X
FNFL DZ, X              # set X
LDZ Y, $CLR_Y
FNH DZ, Y               # set Y
MULH A, ND              # 0->[X-1,Y]
LD HL, $0x50            # -0xB0=-(16+2*80):SVGA=0x50,XGA=-0x68
LDZ Y, $CLR_X
ADDHL DZ, NA            # A=X-0xB0
LD HL, $ZERO?$NULL
FNH A, HLA              # X==col 80?
LDN PC, $NEXTX          # loop if X!=0
LD HL, $INC$NULL
LDZ Y, $CLR_Y
FNH DZ, HLD             # Y=Y+1
LD HL, $ZERO?$NULL
FNH A, HLA              # Y==0?
LDN PC, $NEXTY          # loop if Y!=0

LD PG, $WARM_START
