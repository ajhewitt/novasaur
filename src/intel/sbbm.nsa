# Subtract register from accumulator with borrow
INCLUDE ../inc/unary.nsa
INCLUDE ../inc/zpage.nsa
INCLUDE ../inc/pages.nsa
PAGE SBBM_PG

# assume: Y = $VMS
LDZ HL, $INC2$NULL
FNH DZ, HLD           # inc state
LD HL, $IDEN$NULL
LDZ Y, $FREG
FNH DZ, HLA           # A = flags
#10
LDP HL, $0
LDN HL, $0xFF         # HL = -1 if carry
LD Y, $AREG
ADDHL DZ, ND          # Acc = Acc + HL
#19
AFHL A, NA            # A = flags
LD HL, $3
LD Y, $FREG
ANDHL AZ, ND          # inital borrow -> flags
#31
LD HL, $IDEN$2COM
LD Y, $LREG
FNFH DZ, XA           # X = L
LDZ Y, $HREG
#40
FNH DZ, Y             # Y = H
FNFL M, HL            # HL = -[XY]
LD Y, $AREG
ADDHL DZ, ND          # Acc = Acc - HL
#51
AFHL A, NA            # A = flags
LD HL, $IDEN$NULL
FNH A, HL             # HL = flags
LD Y, $FREG
#61
ORHL DZ, NA           # A = flags | initial borrow flags
LD HL, $SWCARRY$NULL
FNH AZ, HLD           # A -> flags (borrow to carry)
NOP
#70
NOP
NOP
NOP
NOP
NOP
NOP
NOP
NOP
LD HL, $FETCH
#80
LD Y, $VMS            # set Y = $VMS on exit
DISHL DZ, PGA         # jump to next VMC
#86
